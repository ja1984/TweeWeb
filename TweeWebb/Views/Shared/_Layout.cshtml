    <script type="text/javascript">

        var IssuesModel = function () {
            var priv = {};
            var pub = {};

            priv.issue = function (item) {
                var inner = {};
                inner = item;

                inner.issueStatus = ko.computed(function () {
                    switch (inner.Priority) {
                        case "critical":
                            return "error";
                        case "minor":
                            return "info";
                        case "major":
                            return "warning";
                        case "trivial":
                            return "success";
                        default:
                            return "";
                    }
                });

                return inner;
            };

            pub.issues = ko.observableArray([]);

            priv.init = function () {

                $(".fancybox").fancybox(
                    {
                        helpers: {
                            title: {
                                type: 'inside' // 'float', 'inside', 'outside' or 'over'
                            }
                        }
                    });

                $.ajax({
                    url: "/Home/GetIssues",
                    dataType: "json",
                    success: function (response) {
                        $.each(response, function () {
                            pub.issues.push(new priv.issue(this));
                        });
                    }
                });
            };

            priv.init();

            return pub;
        };


        $(function () {
            var issuesModel = new IssuesModel();
            ko.applyBindings(issuesModel);
        });
    </script>
